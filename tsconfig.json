{
  "include": ["src/**/*"],
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
    "types": ["webpack-env"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  }
}